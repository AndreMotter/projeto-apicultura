@page "/usuario/formulario/{id?}"

<h4>Formulário de Usuários</h4>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group mb-12">
                    <label>Nome</label>
                    <input type="text" name="nome" class="form-control">
                </div>
            </div>
            
            <div class="col-md-6 col-sm-12">
                <div class="form-group mb-12">
                    <label>Cidade</label>
                    <select class="js-example-basic-single" style="width:100%" name="cidadeId" id="cidadeId">

                    </select>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>Data Nascimento</label>
                    <input type="date" name="dataNascimento" class="form-control">
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="1">Ativo</option>
                        <option value="2">Inativo</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2 col-sm-12">
                <div class="form-group mb-12">
                    <label>Login</label>
                    <input type="text" name="login" class="form-control">
                </div>
            </div>
            <div class="col-md-2 col-sm-12">
                <div class="form-group mb-12">
                    <label>Senha</label>
                    <input type="password" name="senha" id="senha" class="form-control">
                </div>
            </div>
            <div class="col-md-2 col-sm-12">
                <div class="form-group mb-12">
                    <label>Permissão</label>
                    <select name="permissao" id="permissao" class="form-control">
                        <option value="1">Administrador</option>
                        <option value="2">Cliente/Usuário</option>
                    </select>
                </div>
            </div>
            <div class="col-md-12 text-right">
                <button class="btn btn-danger" onclick="window.location.href='/usuario'">Cancelar</button>
                <button class="btn btn-success" onclick="salvar();">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/usuario/usuario-formulario.js"></script>
}
