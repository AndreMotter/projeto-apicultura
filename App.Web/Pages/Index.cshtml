@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>AcessoCerto</title>
    <link rel="stylesheet" href="~/css/pages/index.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="login-container">
        <h4 class="login-title"><i class="bi bi-shield-check"></i> <span style="color: #007bff;">AcessoCerto</span></h4>
        <div class="login-input">
            <input type="text" id="login" placeholder="Usuário">
        </div>
        <div class="login-input">
            <input type="password" id="senha" placeholder="Senha">
        </div>
        <div class="login-button">
            <button type="submit" onclick="Acessar();">Entrar</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/moment.js"></script>
    <script src="~/js/pages/index/index.js"></script>
    <script src="~/js/core/requester.js"></script>
    <script src="~/js/core/cookies.js"></script>
    <script src="~/js/core/functions.js"></script>
    <script src="~/js/services/IndexService.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</body>
</html>

